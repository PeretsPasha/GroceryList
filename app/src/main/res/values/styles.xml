<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="titleTextColor">@color/primaryTextColor</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:windowAnimationStyle">@style/windowAnimation</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="titleTextColor">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:windowAnimationStyle">@style/windowAnimation</item>
    </style>
    
</resources>
